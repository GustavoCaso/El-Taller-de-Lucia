.container-fluid
  %h1.text-center
    Bodas
  .small_logo.text-center
    = image_tag('small_logo.png')
  .col-xs-12
    %ul.image-grid.clearfix
      - @pictures.each do |picture|
        %li
          %figure
            = image_tag(picture.foto.url(:medium))
            %figcaption
              %h3= picture.title
              %p= picture.description

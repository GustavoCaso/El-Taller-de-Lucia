= form_for @picture do |f|
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :category
    = f.select :category, Picture::CATEGORIES
  .field
    = f.label :foto
    = f.file_field :foto  
  .field
    = f.label :show
    = f.check_box :show
  .action
    = f.submit "Guardar"
